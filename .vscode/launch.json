{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend (pnpm)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    },
    {
      "name": "Backend (npm)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start", "dev"],
      "cwd": "${workspaceFolder}/backend/project-name",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run Frontend + Backend",
      "configurations": ["Frontend (pnpm)", "Backend (npm)"]
    }
  ]
}